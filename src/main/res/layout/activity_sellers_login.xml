<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellersLoginActivity">
    <ImageView
        android:id="@+id/img_login_seller"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/sellerlogin"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sellers Login Form"
        android:gravity="center"
        android:id="@+id/title_login_seller"
        android:layout_below="@+id/img_login_seller"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/orange"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_login_email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/title_login_seller"
        android:layout_marginTop="10dp"
        android:hint="Email..."
        android:textSize="16sp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_login_password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/seller_login_email"
        android:layout_marginTop="10dp"
        android:hint="Password..."
        android:textSize="16sp"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Login"
        android:id="@+id/seller_login_btn"
        android:layout_below="@+id/seller_login_password"
        android:layout_marginTop="20dp"
        android:textColor="@color/orange"
        android:background="@drawable/input_design"
        android:textAllCaps="false"
        android:textSize="18sp"/>
</RelativeLayout>
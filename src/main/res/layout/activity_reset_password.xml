<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ResetPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:id="@+id/relative123"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Reset Password"
            android:id="@+id/reset_password_text_view"
            android:textColor="@color/colorPrimary1"
            android:textAlignment="center"
            android:textSize="18sp"/>

    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number"
        android:id="@+id/security_question_phonenumber"
        android:layout_below="@+id/relative123"
        android:padding="14dp"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security questions"
        android:gravity="center"
        android:id="@+id/question_title"
        android:layout_marginTop="35dp"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary1"
        android:layout_below="@+id/security_question_phonenumber"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your favorite food?"
        android:id="@+id/security_question_1"
        android:layout_below="@+id/question_title"
        android:padding="14dp"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        android:textSize="15sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your favorite super hero?"
        android:id="@+id/security_question_2"
        android:layout_below="@+id/security_question_1"
        android:padding="14dp"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/verify_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/security_question_2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button"
        android:text="Verify"
        android:gravity="center"
        android:textAllCaps="false"
        android:padding="14dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary1"
        android:textSize="18sp" />

</RelativeLayout>